        <!-- Add your site or application content here -->
        <div id="wrapper"><!-- Start Wrapper -->
            <div id="main_container"><!-- Start Main Container -->
                <header>
                    <article id="logo">
                        <h1>goblin admin</h1>
                    </article>
                </header>
                <section id="content">
                    <h2>Insert Stuff</h2>
                        <input type="hidden" id="guid" value="{{page_id}}">
                        <input type="text" id="page_title">
                        <textarea id="page_content" style="width:100%; height:500px;"></textarea>
                        <button id="submit" type="button">Submit</button>
                </section>
                <footer>
                </footer>
             </div><!-- End Main Container -->
        </div><!-- End Wrapper -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.9.0.min.js"><\/script>')</script>
        <script src="js/plugins.js"></script>
        <script src="js/main.js"></script>
        <script>
            $('#submit').click(function() {
                $.ajax({
                    url: "/ajax-save.json",
                    type : "POST",
                    dataType: "json",
                    data: {
                        id: $('#guid').val(),
                        page_title: $('#page_title').val(),
                        page_content: $('#page_content').val()
                    },
                    complete: function() {
                      //called when complete
                      console.log('process complete');
                    },

                    success: function(data) {
                      console.log(data);
                      console.log('process sucess');
                   },

                    error: function() {
                      console.log('process error');
                    },
                  });
            })
        </script>
